{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cook, single station",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "args": ["--id", "${input:station_id}", "--date", "${input:date}"],
            "console": "integratedTerminal"
        },
        {
            "name": "Cook, all stations",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "args": ["--all", "--date", "${input:date}"],
            "console": "integratedTerminal"
        },
    ],
    "inputs": [
        {
            "id": "station_id",
            "type": "promptString",
            "description": "Enter the station ID"
        },
        {
            "id": "date",
            "type": "promptString",
            "description": "Enter the date in ISO format"
        },
        {
            "id": "multithread_threshold",
            "type": "promptString",
            "description": "Enter the multithread threshold"
        }
    ]
}